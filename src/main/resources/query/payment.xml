<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper  
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"  
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
     
<mapper namespace="payment">
	
	<insert id="insertPayment" useGeneratedKeys="true" keyProperty="unique_id" parameterType="concurrentHashMap">
		<![CDATA[
		     INSERT INTO payment(				 
				unique_id_payment
				,card_information
				,installment_months
				,amount
				,vat
				,status 
				,timestamp		     
		     )
		     values(
	           #{uniqueIdPayment}
		         ,#{cardInformation}
		         ,#{installmentMonths} 
		         ,#{amount}
		         ,#{vat}
		         ,#{status}
		         ,CURRENT_TIMESTAMP()
		     )
		]]>
	</insert>
	
	<select id="getPaymentInfo" parameterType="concurrentHashMap" resultType="concurrentHashMap">
		<![CDATA[			    
		SELECT 
			    unique_id
			    ,card_information
			    ,status
			    ,amount     
			    ,vat
			FROM 
			    payment                       
			WHERE 
			    unique_id = #{uniqueIdPayment}
		UNION ALL
				SELECT 
			    unique_id
			    ,card_information
			    ,status			    
			    ,amount    
			    ,vat 
			FROM 
			    payment                       
			WHERE 
			    unique_id_payment = #{uniqueIdPayment}
		]]>
	</select>
	
	<select id="getPayment" parameterType="concurrentHashMap" resultType="concurrentHashMap">
		<![CDATA[
			SELECT
				unique_id 
				,unique_id_paymentmap
				,card_information
				,installment_months
				,amount
				,vat
				,status 
			FROM 
			    payment                       
			WHERE 
			    unique_id = #{uniqueId}
		]]>
	</select>	
	
	<insert id="sendPayment" parameterType="concurrentHashMap">
		<![CDATA[
		     INSERT INTO payment_send(				 
				unique_id
				,send_string
				,timestamp		     
		     )
		     values(
	           #{unique_id}
		         ,#{sendString}
		         ,CURRENT_TIMESTAMP()
		     )
		]]>
	</insert>	
	
	
	
</mapper>